<p id="notice"><%= notice %></p>

<h1>Listing Taps</h1>

<table>
  <thead>
    <tr>
      <th>Tap</th>
      <th>Macaddr</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taps.each do |tap| %>
      <tr>
        <td><%= tap.tap %></td>
        <td><%= tap.macaddr %></td>
        <td><%= tap.state %></td>
        <td><%= link_to 'Show', tap %></td>
        <td><%= link_to 'Edit', edit_tap_path(tap) %></td>
        <td><%= link_to 'Destroy', tap, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

