<%= simple_form_for @tap, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :tap %>
  <%= error_span(@tap[:tap]) %>
  <%= f.input :macaddr %>
  <%= error_span(@tap[:macaddr]) %>
  <%= f.input :state %>
  <%= error_span(@tap[:state]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                taps_path, :class => 'btn btn-default' %>
<% end %>
